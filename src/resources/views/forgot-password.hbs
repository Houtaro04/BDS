<!-- forgot-password.hbs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
</head>
<style>
    /* Tạo kiểu cho nút */
    button {
  background-color: #4CAF50; /* Màu nền của nút */
  border: none; /* Xóa bỏ viền mặc định */
  color: white; /* Màu chữ */
  padding: 15px 32px; /* Khoảng cách nội dung của nút */
  text-align: center; /* Căn giữa văn bản trong nút */
  text-decoration: none; /* Xóa bỏ gạch chân nếu có */
  display: inline-block; /* Đặt nút thành phần inline-block */
  font-size: 16px; /* Kích thước chữ */
  margin: 4px 2px; /* Khoảng cách xung quanh nút */
  cursor: pointer; /* Hiển thị con trỏ tay khi di chuột qua nút */
  border-radius: 4px; /* Bo góc nút */
  transition: background-color 0.3s ease; /* Hiệu ứng chuyển màu nền khi di chuột qua */
}

/* Hiệu ứng khi di chuột qua nút */
button:hover {
  background-color: #45a049; /* Màu nền khi di chuột qua */
}

/* Hiệu ứng khi nhấn nút */
button:active {
  background-color: #397d34; /* Màu nền khi nhấn nút */
}

</style>
<body>
    <h1>Quên mật khẩu</h1>
    {{#if errorMessage}}
      <p style="color: red;">{{errorMessage}}</p>
    {{/if}}

    <form action="/forgot-password" method="POST">
         <label for="fullname">Họ và tên:</label>
        <input type="text" id="fullname" name="fullname" required>
        <label for="nickname">Tên tài khoản:</label>
        <input type="text" id="nickname" name="nickname" required>

        <label for="phone">Số điện thoại:</label>
        <input type="text" id="phone" name="phone" required>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>

        <button type="submit">Xác nhận</button>
    </form>
</body>
</html>
