<!-- reset-password.hbs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
</head>
<style>
    /* Tạo kiểu cho nút */
button {
  background-color: #4CAF50; /* Màu nền của nút */
  border: none; /* Xóa bỏ viền mặc định */
  color: white; /* Màu chữ */
  padding: 15px 32px; /* Khoảng cách nội dung của nút */
  text-align: center; /* Căn giữa văn bản trong nút */
  text-decoration: none; /* Xóa bỏ gạch chân nếu có */
  display: inline-block; /* Đặt nút thành phần inline-block */
  font-size: 16px; /* Kích thước chữ */
  margin: 4px 2px; /* Khoảng cách xung quanh nút */
  cursor: pointer; /* Hiển thị con trỏ tay khi di chuột qua nút */
  border-radius: 4px; /* Bo góc nút */
  transition: background-color 0.3s ease; /* Hiệu ứng chuyển màu nền khi di chuột qua */
}

/* Hiệu ứng khi di chuột qua nút */
button:hover {
  background-color: #45a049; /* Màu nền khi di chuột qua */
}

/* Hiệu ứng khi nhấn nút */
button:active {
  background-color: #397d34; /* Màu nền khi nhấn nút */
}

</style>
<body>
    <h1>Reset Password</h1>
    

    {{#if message}}
      <p>{{message}}</p>
    {{/if}}
    <form action="/reset-password" method="POST">
        <label for="newPassword">New Password:</label>
        <input type="password" id="newPassword" name="newPassword" required>
        <label for="confirmNewPassword">Confirm New Password:</label>
        <input type="password" id="confirmNewPassword" name="confirmNewPassword" required>
        <button type="submit">Reset Password</button>
    </form>
    {{#if errorMessage}}
      <p style="color: red;">{{errorMessage}}</p>
    {{/if}}
</body>
</html>
